<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">
			oracle.jdbc.OracleDriver</property>
		<property name="hibernate.connection.url"></property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.connection.username"></property><!-- password and username are not demo -->
		<property name="show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">update</property><!-- reads hibernate mapping and translates it
		to sql automatically -->
		<property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
		<mapping class="com.revature.beans.User"/>
		<mapping class="com.revature.classroom.Events"/>
	</session-factory>
</hibernate-configuration>